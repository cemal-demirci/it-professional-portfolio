# Gemini API Key
# Get your free API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Redis Database (Vercel KV / Redis Cloud)
# Get your Redis connection from https://redis.com or Vercel KV
KV_REST_API_URL="your_redis_url_here"
KV_REST_API_TOKEN="your_redis_token_here"
REDIS_URL="redis://default:your_password@your-redis-host:port"

# Admin Password for Credit Management
# Used in Settings page and credit API - choose a strong password
ADMIN_PASSWORD="your_strong_admin_password_here"
VITE_ADMIN_PASSWORD="your_strong_admin_password_here"

# AI Unlimited Access Key
# Secret key to enable unlimited AI requests (bypass credit system)
AI_UNLIMITED_KEY="your_secret_unlimited_key_here"
VITE_AI_UNLIMITED_KEY="your_secret_unlimited_key_here"

# Private Section Password
# Password to access private portfolio section
VITE_PRIVATE_SECTION_PASSWORD="your_private_section_password_here"
